---
import BaseLayout from '../layouts/BaseLayout.astro';
import OneWordStory from '../components/OneWordStory.svelte';

const title = 'One Word Story';
const description = 'A collaborative story created one word at a time by the Siblings Write community. Add your word to help tell the tale!';
const permalink = `${Astro.site}one-word-story`;

export const prerender = false;
---

<BaseLayout title={title} description={description} permalink={permalink} current="one-word-story">
  <article>
    <OneWordStory client:load />
  </article>
</BaseLayout>

<style>
  article {
    width: 100%;
  }
</style>
