---
import PostHogLayout from '../../../layouts/PostHogLayout.astro';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import ChristmasQuiz from '../../../components/ChristmasQuiz.svelte';

const pageTitle = "Which Character Are You? | The Battle for Christmas";
const description = "Discover which character from The Battle for Christmas: Reign of the Nutcrackers matches your personality in this interactive quiz!";
const permalink = `${Astro.site?.href}works/battle-for-christmas/which-character-are-you`;
---

<PostHogLayout>
  <BaseLayout title={pageTitle} description={description} permalink={permalink} current="works">
    <article class="quiz-page">
      <!-- Hero Header -->
      <header class="quiz-hero">
        <div class="hero-content">
          <h1 class="hero-title">Which Nutcracker Village Character Are You?</h1>
          <p class="hero-description">
            Answer 10 questions to discover which character from <em>The Battle for Christmas: Reign of the Nutcrackers</em> best matches your personality!
          </p>
        </div>
      </header>

      <!-- Quiz Component -->
      <div class="quiz-wrapper">
        <ChristmasQuiz client:load />
      </div>
    </article>
  </BaseLayout>
</PostHogLayout>

<style>
  .quiz-page {
    width: 100%;
    margin: 0;
    padding: 0;
  }

  .quiz-hero {
    background:
      linear-gradient(135deg, rgba(139, 35, 35, 0.9) 0%, rgba(46, 74, 54, 0.9) 100%),
      url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="200" height="200"><rect width="200" height="200" fill="%238B2323"/><circle cx="40" cy="40" r="30" fill="%23D9B05A" opacity="0.1"/><circle cx="160" cy="140" r="40" fill="%23F7F3EC" opacity="0.1"/><circle cx="30" cy="150" r="3" fill="%23D4282D" opacity="0.3"/><circle cx="170" cy="60" r="3" fill="%23D9B05A" opacity="0.3"/><path d="M100 30 L105 25 L110 30 L105 35 Z" fill="%232E4A36" opacity="0.2"/></svg>');
    padding: 4em 2em;
    text-align: center;
    border-radius: 0 0 40px 40px;
    margin: -1em -2em 3em -2em;
    box-shadow: 0 20px 60px rgba(139, 35, 35, 0.3);
    position: relative;
  }

  .quiz-hero::before {
    content: 'ðŸŒŸ';
    position: absolute;
    top: 20px;
    left: 20px;
    font-size: 2em;
    opacity: 0.3;
    animation: twinkle 2s ease-in-out infinite;
  }

  .quiz-hero::after {
    content: 'ðŸŽ„';
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 2em;
    opacity: 0.3;
    animation: twinkle 2s ease-in-out infinite 1s;
  }

  @keyframes twinkle {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.1);
    }
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-family: 'Georgia', serif;
    font-size: 3.5em;
    color: #F7F3EC;
    margin-bottom: 0.5em;
    text-shadow:
      0 2px 10px rgba(0, 0, 0, 0.3),
      0 0 40px rgba(217, 176, 90, 0.4);
    line-height: 1.2;
  }

  .hero-description {
    font-family: 'Arial', sans-serif;
    font-size: 1.4em;
    color: #F7F3EC;
    line-height: 1.6;
    text-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
  }

  .hero-description em {
    color: #D9B05A;
    font-style: italic;
  }

  .quiz-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1em;
  }

  @media (max-width: 768px) {
    .quiz-hero {
      padding: 3em 1.5em;
      margin: -1em -1em 2em -1em;
    }

    .hero-title {
      font-size: 2.5em;
    }

    .hero-description {
      font-size: 1.2em;
    }
  }

  @media (max-width: 480px) {
    .quiz-hero {
      padding: 2em 1em;
      border-radius: 0 0 20px 20px;
    }

    .hero-title {
      font-size: 2em;
    }

    .hero-description {
      font-size: 1.1em;
    }
  }
</style>
