---
import PostHogLayout from '../../../layouts/PostHogLayout.astro';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';

// Get the work from the slug param
export async function getStaticPaths() {
  // Only generate this page for battle-for-christmas
  return [
    {
      params: { slug: 'battle-for-christmas' }
    }
  ];
}

const { slug } = Astro.params;
const work = await getEntry('works', slug);

if (!work || work.id !== 'battle-for-christmas') {
  return Astro.redirect('/404');
}

const title = `${work.data.title} - Secret Recipe`;
const description = 'Mrs. Stewart\'s Peppermint Cocoa Cookies - A hidden bonus recipe from The Battle for Christmas';
const permalink = `${Astro.site?.href}works/${work.id}/recipe`;

// Breadcrumbs
const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Our Work', href: '/works' },
  { label: work.data.title, href: `/works/${work.id}` },
  { label: 'Secret Recipe' }
];

// Structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Recipe",
  "name": "Mrs. Stewart's Peppermint Cocoa Cookies",
  "recipeIngredient": [
    "1 stick butter (softened)",
    "¬Ω cup sugar",
    "¬Ω cup brown sugar",
    "1 egg",
    "1 tsp vanilla",
    "1‚Öì cups flour",
    "¬º cup cocoa powder",
    "¬Ω tsp baking soda",
    "¬Ω tsp salt",
    "¬Ω cup crushed peppermint",
    "mini marshmallows (optional)"
  ],
  "recipeInstructions": [
    "Preheat oven to 350¬∞F.",
    "Cream butter + sugars.",
    "Add egg + vanilla.",
    "Mix dry ingredients separately, then combine.",
    "Fold in crushed peppermint.",
    "Scoop onto parchment-lined sheet.",
    "Bake 9‚Äì11 minutes.",
    "Press 2‚Äì3 mini marshmallows on top of warm cookies."
  ]
};
---

<PostHogLayout>
  <BaseLayout title={title} description={description} permalink={permalink}>
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <article class="recipe-page">
      <Breadcrumbs items={breadcrumbItems} />

      <div class="recipe-hero">
        <div class="secret-badge">
          <span class="badge-icon">üéÅ</span>
          <span>Secret Bonus Content</span>
        </div>
        <h1 class="recipe-title">Mrs. Stewart's Peppermint Cocoa Cookies</h1>
        <p class="recipe-subtitle">A cozy treat to enjoy while reading your favorite chapter</p>
      </div>

      <div class="recipe-container">
        <div class="recipe-card">
          <section class="recipe-section">
            <h2 class="section-title">
              <span class="section-icon">ü•Ñ</span>
              Ingredients
            </h2>
            <ul class="ingredients-list">
              <li>1 stick butter (softened)</li>
              <li>¬Ω cup sugar</li>
              <li>¬Ω cup brown sugar</li>
              <li>1 egg</li>
              <li>1 tsp vanilla</li>
              <li>1‚Öì cups flour</li>
              <li>¬º cup cocoa powder</li>
              <li>¬Ω tsp baking soda</li>
              <li>¬Ω tsp salt</li>
              <li>¬Ω cup crushed peppermint</li>
              <li class="optional">Optional: mini marshmallows</li>
            </ul>
          </section>

          <section class="recipe-section">
            <h2 class="section-title">
              <span class="section-icon">üìù</span>
              Instructions
            </h2>
            <ol class="instructions-list">
              <li>Preheat oven to 350¬∞F.</li>
              <li>Cream butter + sugars.</li>
              <li>Add egg + vanilla.</li>
              <li>Mix dry ingredients separately, then combine.</li>
              <li>Fold in crushed peppermint.</li>
              <li>Scoop onto parchment-lined sheet.</li>
              <li>Bake 9‚Äì11 minutes.</li>
              <li>Press 2‚Äì3 mini marshmallows on top of warm cookies.</li>
            </ol>
          </section>

          <div class="serving-tip">
            <span class="tip-icon">‚òï</span>
            <p>Serve warm while reading your favorite chapter.</p>
          </div>
        </div>

        <div class="share-recipe-section">
          <div class="share-recipe-card">
            <h2 class="share-title">
              <span class="share-icon">üìñ</span>
              Share Your Reading Recipe
            </h2>
            <p class="share-description">
              What's your favorite treat to enjoy while reading <em>The Battle for Christmas</em>?
              Share your recipe with us and join our community of cozy readers!
            </p>

            <form
              id="recipe-form"
              class="recipe-submit-form"
              action="https://formspree.io/f/xwpppkdj"
              method="POST"
            >
              <div class="form-group">
                <label for="name">Your Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  placeholder="Enter your name"
                  class="form-input"
                >
              </div>

              <div class="form-group">
                <label for="email">Email (optional)</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  placeholder="your@email.com"
                  class="form-input"
                >
              </div>

              <div class="form-group">
                <label for="recipe-name">Recipe/Treat Name</label>
                <input
                  type="text"
                  id="recipe-name"
                  name="recipe-name"
                  required
                  placeholder="e.g., Hot Cocoa, Gingerbread, etc."
                  class="form-input"
                >
              </div>

              <div class="form-group">
                <label for="recipe-details">Recipe or Description</label>
                <textarea
                  id="recipe-details"
                  name="recipe-details"
