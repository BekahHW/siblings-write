<style>
  .work-detail {
    width: 100%;
    margin: 0;
    padding: 0;
  }

  /* Hero Header */
  .hero-header {
    margin: -1em -2em 3em -2em;
    position: relative;
    overflow: hidden;
    border-radius: 6px;
  }

  .hero-image-container {
    position: relative;
    width: 100%;
    height: 500px;
    overflow: hidden;
  }

  [data-work-id="battle-for-christmas"] .hero-image-container {
    height: 600px;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    filter: brightness(0.7);
    transition: transform 0.3s ease;
  }

  .hero-image-container:hover .hero-image {
    transform: scale(1.05);
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(124, 58, 237, 0.3) 0%,
      rgba(124, 58, 237, 0.6) 100%
    );
    pointer-events: none;
  }

  .hero-title {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    color: white;
    font-size: 3.5em;
    font-family: var(--font-family-display);
    text-align: center;
    padding: 1em 2rem 0.5em;
    margin: 0;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.5), 0 0 40px rgba(124, 58, 237, 0.8);
    animation: titleFadeIn 1s ease-out;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.8) 0%,
      transparent 100%
    );
    overflow-wrap: break-word;
    word-wrap: break-word;
    hyphens: auto;
    max-width: 100%;
    box-sizing: border-box;
  }

  @keyframes titleFadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Cinematic Hero for Battle for Christmas */
  .hero-video-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 0;
  }

  .hero-video-background iframe {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 177.78%;
    height: 177.78%;
    transform: translate(-50%, -50%);
    pointer-events: none;
  }

  .hero-frosted {
    background: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0.15) 0%,
      rgba(255, 255, 255, 0.25) 100%
    );
    backdrop-filter: blur(8px) saturate(180%);
    -webkit-backdrop-filter: blur(8px) saturate(180%);
    z-index: 1;
  }

  .hero-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 3;
    width: 90%;
    max-width: 800px;
  }

  .hero-title-cinematic {
    position: static;
    padding: 0;
    margin: 0 0 0.3em 0;
    background: none;
    font-size: 3.5em;
    text-shadow: 0 4px 30px rgba(0, 0, 0, 0.8),
                 0 0 60px rgba(220, 38, 38, 0.8),
                 0 0 80px rgba(22, 163, 74, 0.6);
    animation: titleGlow 3s ease-in-out infinite;
  }

  @keyframes titleGlow {
    0%, 100% {
      text-shadow: 0 4px 30px rgba(0, 0, 0, 0.8),
                   0 0 60px rgba(220, 38, 38, 0.8),
                   0 0 80px rgba(22, 163, 74, 0.6);
    }
    50% {
      text-shadow: 0 4px 30px rgba(0, 0, 0, 0.8),
                   0 0 80px rgba(220, 38, 38, 1),
                   0 0 100px rgba(22, 163, 74, 0.8);
    }
  }

  .hero-tagline {
    font-size: 2.2em;
    color: white;
    font-family: var(--font-family-serif);
    font-style: italic;
    font-weight: 600;
    margin: 0 0 1.5em 0;
    padding: 0.3em 0.8em;
    background: rgba(220, 38, 38, 0.7);
    border-radius: 8px;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.9), 0 0 30px rgba(255, 215, 0, 0.8);
    box-shadow: 0 4px 30px rgba(220, 38, 38, 0.6), 0 0 60px rgba(22, 163, 74, 0.4);
    opacity: 1;
    animation: taglineGlow 2s ease-in-out infinite;
  }

  @keyframes taglineGlow {
    0%, 100% {
      box-shadow: 0 4px 30px rgba(220, 38, 38, 0.6), 0 0 60px rgba(22, 163, 74, 0.4);
      text-shadow: 0 2px 20px rgba(0, 0, 0, 0.9), 0 0 30px rgba(255, 215, 0, 0.8);
    }
    50% {
      box-shadow: 0 4px 40px rgba(220, 38, 38, 0.9), 0 0 80px rgba(22, 163, 74, 0.7);
      text-shadow: 0 2px 20px rgba(0, 0, 0, 0.9), 0 0 50px rgba(255, 215, 0, 1);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .play-trailer-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.8em;
    padding: 1.2em 3em;
    font-size: 1.5em;
    font-weight: 700;
    font-family: var(--font-family-sans);
    background: linear-gradient(135deg, #dc2626 0%, #16a34a 100%);
    color: white;
    border: 3px solid white;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 10px 40px rgba(220, 38, 38, 0.6),
                0 0 60px rgba(22, 163, 74, 0.4);
    animation: btnPulse 2s ease-in-out infinite;
    opacity: 1;
  }

  .play-trailer-btn:hover {
    transform: translateY(-5px) scale(1.1);
    box-shadow: 0 15px 60px rgba(220, 38, 38, 0.9),
                0 0 100px rgba(22, 163, 74, 0.7);
    border-color: rgba(255, 215, 0, 1);
  }

  @keyframes btnPulse {
    0%, 100% {
      box-shadow: 0 10px 40px rgba(220, 38, 38, 0.6),
                  0 0 60px rgba(22, 163, 74, 0.4);
    }
    50% {
      box-shadow: 0 10px 50px rgba(220, 38, 38, 0.8),
                  0 0 80px rgba(22, 163, 74, 0.6);
    }
  }

  .play-icon {
    font-size: 1.2em;
    animation: iconBounce 2s ease-in-out infinite;
  }

  @keyframes iconBounce {
    0%, 100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(5px);
    }
  }

  /* Snowfall Animation */
  .snowfall-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 2;
    overflow: hidden;
  }

  .snowflake {
    position: absolute;
    top: -10%;
    color: white;
    font-size: 1.5em;
    opacity: 0.8;
    animation: snowfall-anim linear infinite;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.8);
  }

  .snowflake:nth-child(1) {
    left: 10%;
    animation-duration: 8s;
    animation-delay: 0s;
  }

  .snowflake:nth-child(2) {
    left: 20%;
    animation-duration: 10s;
    animation-delay: 1s;
  }

  .snowflake:nth-child(3) {
    left: 30%;
    animation-duration: 7s;
    animation-delay: 2s;
  }

  .snowflake:nth-child(4) {
    left: 40%;
    animation-duration: 9s;
    animation-delay: 0.5s;
  }

  .snowflake:nth-child(5) {
    left: 50%;
    animation-duration: 11s;
    animation-delay: 1.5s;
  }

  .snowflake:nth-child(6) {
    left: 60%;
    animation-duration: 8.5s;
    animation-delay: 2.5s;
  }

  .snowflake:nth-child(7) {
    left: 70%;
    animation-duration: 9.5s;
    animation-delay: 3s;
  }

  .snowflake:nth-child(8) {
    left: 80%;
    animation-duration: 7.5s;
    animation-delay: 0.8s;
  }

  .snowflake:nth-child(9) {
    left: 90%;
    animation-duration: 10.5s;
    animation-delay: 1.8s;
  }

  .snowflake:nth-child(10) {
    left: 15%;
    animation-duration: 8.8s;
    animation-delay: 2.8s;
  }

  @keyframes snowfall-anim {
    0% {
      top: -10%;
      opacity: 0.8;
    }
    100% {
      top: 110%;
      opacity: 0;
    }
  }

  /* Content Container */
  .content-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2em;
    border-radius: 6px;
    --shadow-primary: rgba(124, 58, 237, 0.3);
    --shadow-secondary: rgba(249, 168, 212, 0.4);
    --border-color: rgba(124, 58, 237, 0.15);
  }

  /* Intro Section */
  .intro-section {
    display: flex;
    gap: 3em;
    align-items: flex-start;
    margin-bottom: 4em;
    padding: 3em;
    background: linear-gradient(135deg, rgba(249, 168, 212, 0.1) 0%, rgba(167, 139, 250, 0.1) 100%);
    border-radius: 24px;
    border: 2px solid var(--border-color);
    box-shadow: 0 10px 40px var(--shadow-primary);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .intro-section:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 50px var(--shadow-primary);
    border-color: var(--border-color);
  }

  .book-cover-container {
    flex-shrink: 0;
    width: 280px;
  }

  .book-cover {
    width: 100%;
    height: auto;
    border-radius: 16px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    transition: all 0.4s ease;
  }

  .intro-section:hover .book-cover {
    transform: rotate(-3deg) scale(1.05);
    box-shadow: 0 20px 50px var(--shadow-secondary);
  }

  .intro-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1.5em;
  }

  .logline p {
    font-size: 1.4em;
    line-height: 1.6;
    font-family: var(--font-family-serif);
    font-style: italic;
    color: var(--text-main);
    margin: 0;
  }

  .inspired-by {
    padding: 1.5em;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 12px;
    border-left: 4px solid var(--border-color);
  }

  .inspired-label {
    font-family: var(--font-family-sans);
    font-weight: 700;
    font-size: 0.9em;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--primary-color);
    margin: 0 0 0.5em 0;
  }

  .inspired-text {
    font-size: 1.1em;
    line-height: 1.6;
    margin: 0;
    color: var(--text-main);
  }

  /* Button Group */
  .button-group {
    display: flex;
    flex-direction: column;
    gap: 1em;
    width: 100%;
  }

  /* CTA Buttons */
  .cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5em;
    padding: 1.2em 2.5em;
    font-size: 1.2em;
    font-weight: 700;
    font-family: var(--font-family-sans);
    text-decoration: none;
    border-radius: 16px;
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
    overflow: visible;
    border: none;
    cursor: pointer;
  }

  .cta-primary {
    background: var(--primary-gradient);
    color: white;
    box-shadow: 0 8px 25px rgba(124, 58, 237, 0.4);
  }

  .cta-secondary {
    background: var(--sunset-gradient);
    color: white;
    box-shadow: 0 8px 25px rgba(250, 112, 154, 0.4);
  }

  .cta-bookshop {
    background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
    color: white;
    box-shadow: 0 8px 25px rgba(139, 69, 19, 0.4);
  }

  .cta-button::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s ease, height 0.6s ease;
  }

  .cta-button:hover::before {
    width: 400px;
    height: 400px;
  }

  .cta-button:hover {
    transform: translateY(-3px) scale(1.05);
  }

  .cta-primary:hover {
    box-shadow: 0 12px 35px rgba(124, 58, 237, 0.6);
  }

  .cta-secondary:hover {
    box-shadow: 0 12px 35px rgba(250, 112, 154, 0.6);
  }

  .cta-bookshop:hover {
    box-shadow: 0 12px 35px rgba(139, 69, 19, 0.6);
  }

  /* Tooltip */
  .tooltip {
    position: absolute;
    bottom: 120%;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(0, 0, 0, 0.9);
    color: white;
    padding: 0.8em 1.2em;
    border-radius: 8px;
    font-size: 0.85em;
    font-weight: 500;
    white-space: normal;
    max-width: 280px;
    text-align: center;
    line-height: 1.4;
    opacity: 0;
