---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

export async function getStaticPaths() {
  const works = await getCollection('works');
  return works.map((work) => ({
    params: { slug: work.id },
    props: { work },
  }));
}

const { work } = Astro.props;
const { title, description, image, headerImage, link, inspiredBy, summary, inspirationStory, spotifyPlaylist, trailerVideoId } = work.data;

const pageTitle = `${title} | Siblings Write`;
const permalink = `${Astro.site?.href}works/${work.id}`;

// Breadcrumb items
const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Our Work', href: '/works' },
  { label: title }
];

// Generate structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "BreadcrumbList",
      "@id": `${permalink}#breadcrumb`,
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://www.siblingswrite.com/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Our Work",
          "item": "https://www.siblingswrite.com/works"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": title,
          "item": permalink
        }
      ]
    },
    {
      "@type": "Book",
      "@id": `${permalink}#book`,
      "name": title,
      "description": description,
      "image": `https://www.siblingswrite.com${image}`,
      "url": link,
      "inLanguage": "en-US",
      "author": {
        "@type": "Organization",
        "name": "Siblings Write",
        "url": "https://www.siblingswrite.com/"
      }
    }
  ]
};
---


  <BaseLayout title={pageTitle} description={description} permalink={permalink} current="works">
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <article class="work-detail" data-work-id={work.id}>
      <!-- Hero Header with Image and Title -->
