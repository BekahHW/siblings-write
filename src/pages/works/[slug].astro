---
import PostHogLayout from '../../layouts/PostHogLayout.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const works = await getCollection('works');
  return works.map((work) => ({
    params: { slug: work.id },
    props: { work },
  }));
}

const { work } = Astro.props;
const { title, description, image, headerImage, link, inspiredBy, summary, inspirationStory, trailerVideoId } = work.data;

const pageTitle = `${title} | Siblings Write`;
const permalink = `${Astro.site?.href}works/${work.id}`;

// Generate structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "BreadcrumbList",
      "@id": `${permalink}#breadcrumb`,
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://www.siblingswrite.com/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Our Work",
          "item": "https://www.siblingswrite.com/works"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": title,
          "item": permalink
        }
      ]
    },
    {
      "@type": "Book",
      "@id": `${permalink}#book`,
      "name": title,
      "description": description,
      "image": `https://www.siblingswrite.com${image}`,
      "url": link,
      "inLanguage": "en-US",
      "author": {
        "@type": "Organization",
        "name": "Siblings Write",
        "url": "https://www.siblingswrite.com/"
      }
    }
  ]
};
---

<PostHogLayout>
  <BaseLayout title={pageTitle} description={description} permalink={permalink} current="works">
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <article class="work-detail" data-work-id={work.id}>
      <!-- Hero Header with Image and Title -->
      <header class="hero-header">
        <div class="hero-image-container">
          <img
            src={headerImage || image}
            alt={title}
            class="hero-image"
          />
          <div class="hero-overlay"></div>
          <h1 class="hero-title">{title}</h1>
        </div>
      </header>

      <!-- Main Content Container -->
      <div class="content-container">
        <!-- Logline, Inspired By, and Buy Button Section -->
        <section class="intro-section">
          <div class="book-cover-container">
            <img
              src={image}
              alt={`${title} book cover`}
              class="book-cover"
              loading="eager"
            />
          </div>

          <div class="intro-content">
            <div class="logline">
              <p>{description}</p>
            </div>

            {inspiredBy && (
              <div class="inspired-by">
                <p class="inspired-label">What Inspired This Story</p>
                <p class="inspired-text">{inspiredBy}</p>
              </div>
            )}

            <a
              href={link}
              target="_blank"
              rel="noopener noreferrer"
              class="cta-button cta-primary"
            >
              <span class="button-text">Buy Now on Amazon</span>
              <span class="button-icon">üìö</span>
            </a>
          </div>
        </section>

        <!-- Book Summary Section -->
        {summary && (
          <section class="summary-section">
            <h2 class="section-title">
              <span class="title-decoration">‚ú®</span>
              About the Book
              <span class="title-decoration">‚ú®</span>
            </h2>
            <div class="summary-content">
              <p>{summary}</p>
            </div>
          </section>
        )}

        <!-- Book Trailer Section -->
        {trailerVideoId && trailerVideoId !== "YOUR_YOUTUBE_VIDEO_ID_HERE" && (
          <section class="trailer-section" data-work-id={work.id}>
            <h2 class="section-title">
              <span class="title-decoration">üéÑ</span>
              Book Trailer
              <span class="title-decoration">üéÑ</span>
            </h2>
            <div class="trailer-container">
              <div class="video-wrapper">
                <iframe
                  src={`https://www.youtube.com/embed/${trailerVideoId}`}
                  title={`${title} - Book Trailer`}
                  frameborder="0"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowfullscreen
                  loading="lazy"
                ></iframe>
              </div>
            </div>
          </section>
        )}

        <!-- Inspiration Story Section -->
        {inspirationStory && (
          <section class="inspiration-section">
            <h2 class="section-title">
              <span class="title-decoration">üí´</span>
              The Story Behind the Story
              <span class="title-decoration">üí´</span>
            </h2>
            <div class="inspiration-content">
              {inspirationStory.split('\n\n').map((paragraph: string) => (
                <p>{paragraph}</p>
              ))}
            </div>
          </section>
        )}

        <!-- Final CTA Section -->
        <section class="final-cta-section">
          <div class="cta-card">
            <h3>Ready to Start Your Adventure?</h3>
            <p>Get your copy today and discover the magic for yourself!</p>
            <a
              href={link}
              target="_blank"
              rel="noopener noreferrer"
              class="cta-button cta-secondary"
            >
              <span class="button-text">Order Your Copy Now</span>
              <span class="button-icon">üöÄ</span>
            </a>
          </div>
        </section>

        <!-- Back to Works Link -->
        <div class="back-link-container">
          <a href="/works" class="back-link">
            ‚Üê Back to All Works
          </a>
        </div>
      </div>
    </article>
  </BaseLayout>
</PostHogLayout>

<style>
  .work-detail {
