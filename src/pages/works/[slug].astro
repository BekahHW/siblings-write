    flex-shrink: 0;
    width: 280px;
  }

  .book-cover {
    width: 100%;
    height: auto;
    border-radius: 16px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    transition: all 0.4s ease;
  }

  .intro-section:hover .book-cover {
    transform: rotate(-3deg) scale(1.05);
    box-shadow: 0 20px 50px rgba(124, 58, 237, 0.4);
  }

  .intro-content {
