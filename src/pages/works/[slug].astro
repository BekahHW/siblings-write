<script is:inline>
  (function() {
    function initTrailerPlayer() {
      const playBtn = document.getElementById('playTrailerBtn');
      const heroVideoIframe = document.getElementById('heroVideoIframe');
      const heroOverlay = document.getElementById('heroOverlay');
      const snowfallContainer = document.getElementById('snowfallContainer');
      const heroContent = document.getElementById('heroContent');

      console.log('Trailer player script running');
      console.log('Elements found:', {
        playBtn: !!playBtn,
        heroVideoIframe: !!heroVideoIframe,
        heroOverlay: !!heroOverlay,
        snowfallContainer: !!snowfallContainer,
        heroContent: !!heroContent
      });

      if (!playBtn || !heroVideoIframe) {
        console.log('Missing required elements for trailer player');
        return;
      }

      playBtn.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        const trailerId = playBtn.getAttribute('data-trailer-id');
        console.log('Play button clicked! Trailer ID:', trailerId);

        if (trailerId) {
          // Hide overlay, snowfall, and hero content
          if (heroOverlay) heroOverlay.style.display = 'none';
          if (snowfallContainer) snowfallContainer.style.display = 'none';
          if (heroContent) heroContent.style.display = 'none';

          // Replace the background video with the full trailer with controls
          heroVideoIframe.src = 'https://www.youtube.com/embed/' + trailerId + '?autoplay=1&controls=1&rel=0&modestbranding=1';

          console.log('Trailer now playing in header');
        }
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initTrailerPlayer);
    } else {
      initTrailerPlayer();
    }
  })();
</script>
