  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.close-button:hover {
  background: #f0f0f0;
  color: #333;
}

.modal-body {
  padding: 1em 2em;
}

.modal-body p {
  margin: 1em 0;
  line-height: 1.6;
  color: #555;
