  }
}

.latest-section-wrapper {
  background: #f9f9f9;
  padding: 4em 2em;
  border-radius: 12px;
}

.section-title {
  font-family: "Playwrite HU", cursive;
  font-size: 2.2em;
  margin-bottom: 0.8em;
}

.post-list {
  list-style: none;
  padding: 0;
  margin: 2em 0;
  display: flex;
  flex-direction: column;
