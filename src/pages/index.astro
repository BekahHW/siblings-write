.caption {
  font-size: .8em;
  font-style: italic;
  text-align: left;
}

.hero-image {
  width: 100%;
  max-width: 550px;
  margin-bottom: 1em;
  border-radius: 12px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
}
.about-content {
