---
import PostHogLayout from '../../layouts/PostHogLayout.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Bio from '../../components/Bio.astro';
import CYOAStory from '../../components/CYOAStory.svelte';
import { getCollection, getEntry } from 'astro:content';
import ShareButtons from '../../components/ShareButtons.astro';

export async function getStaticPaths() {
  try {
    const cyoaEntries = await getCollection('cyoa');

    // Create routes using entry ID
    return cyoaEntries.map(story => {
      console.log(`Creating CYOA route for ${story.id}`);
      return {
        params: { slug: story.id },
        props: { entryId: story.id },
      };
    });
  } catch (error) {
    console.error("Error in getStaticPaths:", error);
    return [];
  }
}

// Get CYOA story data from props
const { entryId } = Astro.props;
const entry = await getEntry('cyoa', entryId);

if (!entry) {
  return Astro.redirect('/404');
}

// Get the raw content for the interactive component
const rawContent = entry.body;

// Get author info
const allAuthors = await getCollection('authors');
let author;
if (entry.data.author?.id) {
  try {
    author = await getEntry('authors', entry.data.author.id);
    if (author) {
      console.log(`Found author for ${entry.data.author.id}`);
    } else {
      console.error(`Author not found: ${entry.data.author.id}`);
    }
  } catch (error) {
    console.error(`Error fetching author: ${error.message}`);
  }
}

// Get all CYOA stories that are not hidden
const allCYOAStories = await getCollection('cyoa', (story) => !story.data.hidden);

// Sort by publish date (newest first)
allCYOAStories.sort((a, b) => {
  return new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf();
});

// Find the current story index
const currentIndex = allCYOAStories.findIndex(story => story.id === entryId);

// For reverse chronological order:
const nextStory = currentIndex < allCYOAStories.length - 1 ? allCYOAStories[currentIndex + 1] : null;
const prevStory = currentIndex > 0 ? allCYOAStories[currentIndex - 1] : null;

const permalink = `${Astro.site.href}cyoa/${entry.id}`;
---
<PostHogLayout>
  <BaseLayout title={entry.data.title} description={entry.data.description} permalink={permalink} current="cyoa">
    <header>
      <p>{entry.data.publishDate}</p>
      <h1>{entry.data.title}</h1>
      <p class="description">{entry.data.description}</p>
      <hr />
    </header>
    <div class="container">
      <div class="story-wrapper">
        <CYOAStory rawContent={rawContent} client:load />
      </div>

      <div class="post-navigation">
        {prevStory && (
        <a href={`/cyoa/${prevStory.id}`} class="nav-button prev-button">
          <span class="nav-arrow">←</span>
          <span class="nav-text">Previous Story</span>
        </a>
        )}

        {nextStory && (
        <a href={`/cyoa/${nextStory.id}`} class="nav-button next-button">
          <span class="nav-text">Next Story</span>
          <span class="nav-arrow">→</span>
        </a>
        )}
      </div>

      <hr />
      {author && (
        <div class="author-bio">
          <h3>About the Author</h3>
          <Bio
            name={author.data.name}
            bio={author.data.bio}
            avatar={author.data.avatar}
          />
        </div>
      )}

      <ShareButtons title={entry.data.title} permalink={permalink} />
    </div>
  </BaseLayout>
</PostHogLayout>

<style>
  header {
    text-align: center;
  }

  header h1 {
    margin-bottom: 0.7em;
  }

  header p {
    color: var(--text-secondary);
    text-transform: uppercase;
    font-family: var(--font-family-sans);
    font-weight: 600;
  }

  header p.description {
    text-transform: none;
    font-weight: normal;
    font-size: 1.1rem;
    margin-top: 0.5rem;
    font-style: italic;
  }

  header hr {
    min-width: 100px;
    width: 30%;
  }

  .story-wrapper {
    margin: 2rem 0;
  }

  .author-bio {
    margin-top: 2rem;
    padding-top: 1rem;
  }

  .author-bio h3 {
    margin-bottom: 1rem;
    font-size: 1.4rem;
  }

  .post-navigation {
    display: flex;
    justify-content: space-between;
    margin-top: 3rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border-color);
  }

  .nav-button {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    background-color: var(--background);
    border: 1px solid var(--border-color);
    border-radius: 4px;
    color: var(--text-color);
    font-family: var(--font-family-sans);
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .nav-button:hover {
    background-color: var(--background-secondary);
    border-color: var(--text-color);
  }

  .prev-button {
    margin-right: auto;
  }

  .next-button {
    margin-left: auto;
  }

  .nav-arrow {
    font-size: 1.2rem;
    line-height: 1;
  }

  .prev-button .nav-arrow {
    margin-right: 0.5rem;
  }

  .next-button .nav-arrow {
    margin-left: 0.5rem;
  }

  .nav-text {
    font-size: 1.5rem;
  }

  @media (max-width: 768px) {
    .post-navigation {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>
