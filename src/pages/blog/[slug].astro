---
import PostHogLayout from '../../layouts/PostHogLayout.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Bio from '../../components/Bio.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { getCollection, getEntry, render } from 'astro:content';
import ShareButtons from '../../components/ShareButtons.astro';

export async function getStaticPaths() {
  try {
    const blogEntries = await getCollection('blog');

    // Create routes using entry ID
    return blogEntries.map(post => {
      console.log(`Creating route for ${post.id}`);
      return {
        params: { slug: post.id },
        props: { entryId: post.id },  // Just pass the ID
      };
    });
  } catch (error) {
    console.error("Error in getStaticPaths:", error);
    return [];
  }
}

// Get blog post data from props
const { entryId } = Astro.props;
const entry = await getEntry('blog', entryId);

if (!entry) {
  return Astro.redirect('/404');
}

// Render the content after all processing
const allAuthors = await getCollection('authors');
let author;
if (entry.data.author?.id) {
  try {
    author = await getEntry('authors', entry.data.author.id);
    if (author) {
      console.log(`Found author for ${entry.data.author.id}`);
    } else {
      console.error(`Author not found: ${entry.data.author.id}`);
    }
  } catch (error) {
    console.error(`Error fetching author: ${error.message}`);
  }
}

// Get all blog posts that are not hidden
const allBlogPosts = await getCollection('blog', (post) => !post.data.hidden);

// Sort by publish date (newest first)
allBlogPosts.sort((a, b) => {
  return new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf();
});

// Find the current post index
const currentIndex = allBlogPosts.findIndex(post => post.id === entryId);

// For reverse chronological order:
// "Next" means an older post (next in array)
// "Previous" means a newer post (previous in array)
const nextPost = currentIndex < allBlogPosts.length - 1 ? allBlogPosts[currentIndex + 1] : null;
const prevPost = currentIndex > 0 ? allBlogPosts[currentIndex - 1] : null;

const permalink = `${Astro.site.href}blog/${entry.id}`;

// Generate reading time if not provided
const readingTime = entry.data.readingTime || '5 min read';

// Generate genre based on content analysis
const getGenre = (title, description) => {
  const text = `${title} ${description}`.toLowerCase();
  if (text.includes('christmas') || text.includes('holiday')) return 'Christmas Fiction';
  if (text.includes('magic') || text.includes('fantasy') || text.includes('mysterious')) return 'Magical Realism';
  if (text.includes('young') || text.includes('teen') || text.includes('school')) return 'Young Adult Fiction';
  if (text.includes('children') || text.includes('kid')) return 'Middle Grade Fiction';
  return 'Contemporary Fiction';
};

const genre = entry.data.genre || getGenre(entry.data.title, entry.data.description);

// Generate SEO keywords
const generateKeywords = (title, description, genre) => {
  const baseKeywords = 'Christmas novels, YA fiction, middle grade stories, magical realism, family stories';
  const contentKeywords = [];
  
  const text = `${title} ${description}`.toLowerCase();
  if (text.includes('christmas') || text.includes('holiday')) {
    contentKeywords.push('Christmas stories', 'holiday fiction', 'Christmas magic');
  }
  if (text.includes('magic') || text.includes('mysterious')) {
    contentKeywords.push('magical stories', 'fantasy elements', 'supernatural fiction');
  }
  if (text.includes('island') || text.includes('adventure')) {
    contentKeywords.push('adventure stories', 'mystery fiction', 'coming of age');
  }
  if (text.includes('family') || text.includes('sibling')) {
    contentKeywords.push('family fiction', 'sibling stories', 'childhood memories');
  }
  
  return [baseKeywords, ...contentKeywords].join(', ');
};

const keywords = entry.data.keywords || generateKeywords(entry.data.title, entry.data.description, genre);

// Render the content
const { Content } = await render(entry);

// Breadcrumb navigation
const breadcrumbs = [
  { name: 'Home', href: '/' },
  { name: 'Stories', href: '/blog/' },
  { name: entry.data.title }
];
---
<PostHogLayout>
  <BaseLayout 
    title={entry.data.title} 
    description={entry.data.description} 
    permalink={permalink} 
    current="blog"
    keywords={keywords}
    author={author?.data.name}
    publishDate={entry.data.publishDate}
    genre={genre}
    readingTime={readingTime}
  >
    <div class="container">
      <Breadcrumbs items={breadcrumbs} />
    </div>
    
    <header>
      <div class="post-metadata">
        <time datetime={entry.data.publishDate}>{entry.data.publishDate}</time> ~ {readingTime}
        {genre && <span class="genre-badge">{genre}</span>}
      </div>
      <h1>{entry.data.title}</h1>
      {author && <p class="byline">By <a href={`/authors/${entry.data.author.id}`}>{author.data.name}</a></p>}
      <hr />
    </header>
    <div class="container">
      <!-- Citation helper for LLMs -->
      <div class="citation-info" data-llm-citable="true">
        <p><strong>Citation:</strong> {entry.data.title} by {author?.data.name || 'Hawrot Siblings'}, Siblings Write, {entry.data.publishDate}. Available at: {permalink}</p>
      </div>
      
      <article class="content" itemscope itemtype="https://schema.org/CreativeWork">
        <meta itemprop="name" content={entry.data.title} />
        <meta itemprop="author" content={author?.data.name || 'Hawrot Siblings'} />
        <meta itemprop="datePublished" content={entry.data.publishDate} />
        <meta itemprop="genre" content={genre} />
        <meta itemprop="url" content={permalink} />
        <Content />
      </article>
      
      <div class="post-navigation">
        {prevPost && (
        <a href={`/blog/${prevPost.id}`} class="nav-button prev-button">
          <span class="nav-arrow">←</span>
          <span class="nav-text">Previous Post</span>
        </a>
        )}

        {nextPost && (
        <a href={`/blog/${nextPost.id}`} class="nav-button next-button">
          <span class="nav-text">Next Post</span>
          <span class="nav-arrow">→</span>
        </a>
        )}
      </div>
      
      <hr />
      {author && (
        <div class="author-bio">
          <h3>About the Author</h3>
          <Bio 
            name={author.data.name}
            bio={author.data.bio}
            avatar={author.data.avatar}
          />
        </div>
      )}
      
      <ShareButtons title={entry.data.title} permalink={permalink} />
    </div>
  </BaseLayout>
</PostHogLayout>

<style>
  header {
    text-align: center;
  }

  header h1 {
    margin-bottom: 0.7em;
  }

  header p {
    color: var(--text-secondary);
    text-transform: uppercase;
    font-family: var(--font-family-sans);
    font-weight: 600;
  }

  header hr {
    min-width: 100px;
    width: 30%;
  }
  
  .post-metadata {
    color: var(--text-secondary);
    text-transform: uppercase;
    font-family: var(--font-family-sans);
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }
  
  .genre-badge {
    background: var(--primary-color, #548e9b);
    color: white;
    padding: 0.2rem 0.6rem;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: 500;
    text-transform: none;
  }
  
  .byline {
    font-style: italic;
    color: var(--text-secondary);
    margin-top: 0.5rem;
  }
  
  .byline a {
    color: var(--primary-color, #548e9b);
    text-decoration: none;
  }
  
  .byline a:hover {
    text-decoration: underline;
  }
  
  .citation-info {
    background: #f8f9fa;
    border: 1px solid #e9ecef;
    border-radius: 6px;
    padding: 1rem;
    margin-bottom: 2rem;
    font-size: 0.9rem;
    color: #666;
  }
  
  .citation-info p {
    margin: 0;
  }
  
  /* LLM-friendly content markers */
  .content[itemscope] {
    position: relative;
  }
  
  .content[itemscope]::before {
    content: '';
    position: absolute;
    top: -10px;
    left: -5px;
    right: -5px;
    bottom: -10px;
    border: 2px dashed transparent;
    border-radius: 8px;
    pointer-events: none;
  }
  
  @media (prefers-reduced-motion: no-preference) {
    .content[itemscope]:hover::before {
      border-color: rgba(84, 142, 155, 0.3);
      animation: pulse 2s infinite;
    }
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.7; }
  }
    
  .author-bio {
    margin-top: 2rem;
    padding-top: 1rem;
  }
  
  .author-bio h3 {
    margin-bottom: 1rem;
    font-size: 1.4rem;
  }

  .post-navigation {
    display: flex;
    justify-content: space-between;
    margin-top: 3rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border-color);
  }

  .nav-button {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    background-color: var(--background);
    border: 1px solid var(--border-color);
    border-radius: 4px;
    color: var(--text-color);
    font-family: var(--font-family-sans);
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .nav-button:hover {
    background-color: var(--background-secondary);
    border-color: var(--text-color);
  }

  .prev-button {
    margin-right: auto;
  }

  .next-button {
    margin-left: auto;
  }

  .nav-arrow {
    font-size: 1.2rem;
    line-height: 1;
  }

  .prev-button .nav-arrow {
    margin-right: 0.5rem;
  }

  .next-button .nav-arrow {
    margin-left: 0.5rem;
  }

  .nav-text {
    font-size: 1.5rem;
  }

  @media (max-width: 768px) {
    .post-navigation {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-button {
      width: 100%;
      justify-content: center;
    }
    
    .post-metadata {
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .citation-info {
      padding: 0.8rem;
      font-size: 0.8rem;
    }
  }
</style>