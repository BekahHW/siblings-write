---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Bio from '../../components/Bio.astro';
import { getCollection, getEntry } from 'astro:content';
import ShareButtons from '../../components/ShareButtons.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

// Get blog post data from props
const { entry } = Astro.props;
const { Content } = await entry.render();

// Get author data by searching for an entry with matching ID
let author;
try {
  // Get all author entries
  const allAuthors = await getCollection('authors');
  
  if (entry.data.author) {
    // Find the author whose ID (with .md stripped) matches the entry.data.author
    author = allAuthors.find(a => a.id.replace(/\.md$/, '') === entry.data.author);
    
    if (author) {
      console.log(`Found author for ${entry.data.author}`);
    } else {
      console.error(`Author not found: ${entry.data.author}`);
    }
  }
} catch (error) {
  console.error('Error fetching author:', error);
}

const permalink = `${Astro.site.href}blog/${entry.slug}`;
---

<BaseLayout title={entry.data.title} description={entry.data.description} permalink={permalink} current="blog">
  <header>
    <p>{entry.data.publishDate} ~ {entry.data.readingTime}</p>
    <h1>{entry.data.title}</h1>
    <hr />
  </header>
  <div class="container">
    <article class="content">
      <Content />
    </article>
    <hr />
    
    {author && (
      <div class="author-bio">
        <h3>About the Author</h3>
        <Bio 
          name={author.data.name}
          bio={author.data.bio}
          avatar={author.data.avatar}
        />
      </div>
    )}
    
    <ShareButtons title={entry.data.title} permalink={permalink} />
  </div>
</BaseLayout>

<style>
  header {
    text-align: center;
  }

  header h1 {
    margin-bottom: 0.7em;
  }

  header p {
    color: var(--text-secondary);
    text-transform: uppercase;
    font-family: var(--font-family-sans);
    font-weight: 600;
  }

  header hr {
    min-width: 100px;
    width: 30%;
  }
    
  .author-bio {
    margin-top: 2rem;
    padding-top: 1rem;
  }
  
  .author-bio h3 {
    margin-bottom: 1rem;
    font-size: 1.4rem;
  }
</style>