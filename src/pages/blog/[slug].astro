---
import PostHogLayout from '../../layouts/PostHogLayout.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Bio from '../../components/Bio.astro';
import { getCollection, getEntry, render } from 'astro:content';
import ShareButtons from '../../components/ShareButtons.astro';
import YouTubeEmbed from '../../components/YouTubeEmbed.astro';
import NewsletterCTA from '../../components/NewsletterCTA.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

export const prerender = true;

export async function getStaticPaths() {
  try {
    const blogEntries = await getCollection('blog');

    // Create routes using entry ID
    return blogEntries.map(post => {
      console.log(`Creating route for ${post.id}`);
      return {
        params: { slug: post.id },
        props: { entryId: post.id },  // Just pass the ID
      };
    });
  } catch (error) {
    console.error("Error in getStaticPaths:", error);
    return [];
  }
}

// Get blog post data from props
const { entryId } = Astro.props;
const entry = await getEntry('blog', entryId);

if (!entry) {
  return Astro.redirect('/404');
}

// Render the content
const { Content } = await render(entry);
const allAuthors = await getCollection('authors');

// Fetch all authors for the post
const authors = [];
if (entry.data.authors && Array.isArray(entry.data.authors)) {
  for (const authorRef of entry.data.authors) {
    try {
      const author = await getEntry('authors', authorRef.id);
      if (author) {
        authors.push(author);
        console.log(`Found author for ${authorRef.id}`);
      } else {
        console.error(`Author not found: ${authorRef.id}`);
      }
    } catch (error) {
      console.error(`Error fetching author: ${error.message}`);
    }
  }
}

// Get all blog posts that are not hidden
const allBlogPosts = await getCollection('blog', (post) => !post.data.hidden);

// Sort by publish date (newest first)
allBlogPosts.sort((a, b) => {
  return new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf();
});

// Find the current post index
const currentIndex = allBlogPosts.findIndex(post => post.id === entryId);

// For reverse chronological order:
// "Next" means an older post (next in array)
// "Previous" means a newer post (previous in array)
const nextPost = currentIndex < allBlogPosts.length - 1 ? allBlogPosts[currentIndex + 1] : null;
const prevPost = currentIndex > 0 ? allBlogPosts[currentIndex - 1] : null;

const permalink = `${Astro.site.href}blog/${entry.id}`;

// Breadcrumb items
const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Stories', href: '/blog' },
  { label: entry.data.title }
];

// Create Article structured data
const articleStructuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Article",
      "@id": `${permalink}#article`,
      "headline": entry.data.title,
      "description": entry.data.description,
      "datePublished": entry.data.publishDate,
      "author": authors.map(author => ({
        "@type": "Person",
        "name": author.data.name,
        "url": `${Astro.site.href}authors/${author.id}`
      })),
      "publisher": {
        "@type": "Organization",
        "name": "Siblings Write",
        "url": "https://www.siblingswrite.com/",
        "logo": {
          "@type": "ImageObject",
          "url": "https://www.siblingswrite.com/assets/social.png"
        }
      },
      "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": permalink
      },
      "url": permalink,
      "inLanguage": "en-US"
    },
    {
      "@type": "BreadcrumbList",
      "@id": `${permalink}#breadcrumb`,
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": Astro.site.href
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Stories",
          "item": `${Astro.site.href}blog`
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": entry.data.title,
          "item": permalink
        }
      ]
    }
  ]
};
---
<PostHogLayout>
  <BaseLayout title={entry.data.title} description={entry.data.description} permalink={permalink} current="blog">
    <script type="application/ld+json" set:html={JSON.stringify(articleStructuredData)} />
    <Breadcrumbs items={breadcrumbItems} />
    <header>
      <p>{entry.data.publishDate} ~ {entry.data.readingTime}</p>
      <h1>{entry.data.title}</h1>
      <hr />
    </header>
    <div class="container">
      <article class="content">
        <Content />
      </article>

      {entry.data.youtubeId && (
        <div class="youtube-cta">
          <h3>Listen to This Story</h3>
          <p>Hear this tale brought to life by The Hawrot Siblings</p>
          <YouTubeEmbed videoId={entry.data.youtubeId} title={entry.data.title} />
        </div>
      )}

      <NewsletterCTA variant="default" showTestimonials={false} />

      <div class="post-navigation">
        {prevPost && (
        <a href={`/blog/${prevPost.id}`} class="nav-button prev-button">
          <span class="nav-arrow">←</span>
          <span class="nav-text">Previous Post</span>
        </a>
        )}

        {nextPost && (
        <a href={`/blog/${nextPost.id}`} class="nav-button next-button">
          <span class="nav-text">Next Post</span>
          <span class="nav-arrow">→</span>
        </a>
        )}
      </div>
      
      <hr />
      {authors.length > 0 && (
        <div class="author-bio">
          <h3>About the {authors.length > 1 ? 'Authors' : 'Author'}</h3>
          {authors.map(author => (
            <Bio
              name={author.data.name}
              bio={author.data.bio}
              avatar={author.data.avatar}
            />
          ))}
        </div>
      )}
      
      <ShareButtons title={entry.data.title} permalink={permalink} />
    </div>
  </BaseLayout>
</PostHogLayout>

<style>
  header {
    text-align: center;
    overflow-wrap: break-word;
    word-wrap: break-word;
    max-width: 100%;
  }

  header h1 {
    margin-bottom: 0.7em;
    overflow-wrap: break-word;
    word-wrap: break-word;
    hyphens: auto;
    max-width: 100%;
  }

  header p {
    color: var(--text-secondary);
    text-transform: uppercase;
    font-family: var(--font-family-sans);
    font-weight: 600;
    overflow-wrap: break-word;
    word-wrap: break-word;
    max-width: 100%;
  }

  header hr {
    min-width: 100px;
    width: 30%;
  }

  .youtube-cta {
    margin: 3rem 0;
    padding: 2rem;
    background: linear-gradient(135deg, #f0f8f9 0%, #d4e9ed 100%);
    border-radius: 12px;
    border: 2px solid rgba(84, 142, 155, 0.2);
    text-align: center;
  }

  .youtube-cta h3 {
    margin: 0 0 0.5rem 0;
    color: var(--primary-color, #548e9b);
    font-size: 1.6rem;
  }

  .youtube-cta p {
    margin: 0 0 1.5rem 0;
    color: #555;
    font-size: 1.1rem;
  }

  .author-bio {
    margin-top: 2rem;
    padding-top: 1rem;
  }
  
  .author-bio h3 {
    margin-bottom: 1rem;
    font-size: 1.4rem;
  }

  .post-navigation {
    display: flex;
    justify-content: space-between;
    margin-top: 3rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border-color);
  }

  .nav-button {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    background-color: var(--background);
    border: 1px solid var(--border-color);
    border-radius: 4px;
    color: var(--text-color);
    font-family: var(--font-family-sans);
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .nav-button:hover {
    background-color: var(--background-secondary);
    border-color: var(--text-color);
  }

  .prev-button {
    margin-right: auto;
  }

  .next-button {
    margin-left: auto;
  }

  .nav-arrow {
    font-size: 1.2rem;
    line-height: 1;
  }

  .prev-button .nav-arrow {
    margin-right: 0.5rem;
  }

  .next-button .nav-arrow {
    margin-left: 0.5rem;
  }

  .nav-text {
    font-size: 1.5rem;
  }

  @media (max-width: 768px) {
    .post-navigation {
      flex-direction: column;
      gap: 1rem;
    }

    .nav-button {
      width: 100%;
      justify-content: center;
    }
  }
</style>