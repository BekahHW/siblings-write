---
import NewsletterCTA from './NewsletterCTA.astro';
---

<footer>
  <div class="footer-newsletter">
    <NewsletterCTA variant="footer" showTestimonials={false} />
  </div>

  <div class="footer-credits">
    <span>
      &copy; {new Date().getFullYear()} Siblings Write.
      Powered by <a href="https://astro.build" target="_blank" rel="noopener">Astro</a>.
      Template by <a href="https://www.twitter.com/Charca" target="_blank" rel="noopener">Maxi Ferreira</a>.
    </span>
  </div>
</footer>

<style>
  footer {
    margin: 3em auto 1em;
    max-width: 1400px;
    padding: 0 2em;
    width: 100%;
  }

  .footer-newsletter {
    max-width: 800px;
    margin: 0 auto 2em;
    padding-bottom: 2em;
    border-bottom: 1px solid var(--border-color);
  }

  .footer-credits {
    color: var(--text-secondary);
    font-size: .8em;
    text-align: center;
    padding: 1em 0;
  }
</style>
