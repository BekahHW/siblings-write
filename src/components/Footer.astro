---
import NewsletterCTA from './NewsletterCTA.astro';
import FontAwesomeIcon from "./FontAwesomeIcon.astro";
import { faAmazon, faYoutube } from "@fortawesome/free-brands-svg-icons";

interface Props {
  hideNewsletter?: boolean;
}

const { hideNewsletter = false } = Astro.props;
---

<footer>
  {!hideNewsletter && (
    <div class="footer-newsletter">
      <NewsletterCTA variant="footer" showTestimonials={false} tagline="Never Miss a Story. Subscribe Today" />
    </div>
  )}

  <div class="social-links">
    <a href="https://www.amazon.com/stores/author/B0FQS3SGZQ" target="_blank" rel="noopener" class="social-link" aria-label="Follow us on Amazon">
      <FontAwesomeIcon iconName={faAmazon} />
      <span>Follow on Amazon</span>
    </a>
    <a href="https://www.youtube.com/@thehawrotsiblings" target="_blank" rel="noopener" class="social-link" aria-label="Subscribe on YouTube">
      <FontAwesomeIcon iconName={faYoutube} />
      <span>Subscribe on YouTube</span>
    </a>
  </div>

  <div class="footer-credits">
    <span>
      &copy; {new Date().getFullYear()} Siblings Write.
      Powered by <a href="https://astro.build" target="_blank" rel="noopener">Astro</a>.
      Template by <a href="https://www.twitter.com/Charca" target="_blank" rel="noopener">Maxi Ferreira</a>.
    </span>
  </div>
</footer>

<style>
  footer {
    margin: 3em auto 1em;
    max-width: 1400px;
    padding: 0 2em;
    width: 100%;
  }

  .footer-newsletter {
    max-width: 800px;
    margin: 0 auto 2em;
    padding-bottom: 2em;
    border-bottom: 1px solid var(--border-color);
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 2em;
    margin-bottom: 1.5em;
    flex-wrap: wrap;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5em;
    padding: 0.8em 1.5em;
    background: var(--primary-gradient);
    color: white;
    text-decoration: none;
    border-radius: 12px;
    transition: all 0.3s ease;
    font-size: 1.1em;
    font-weight: 600;
    position: relative;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(124, 58, 237, 0.3);
  }

  .social-link::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s ease, height 0.6s ease;
  }

  .social-link:hover::before {
    width: 300px;
    height: 300px;
  }

  .social-link:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 8px 25px rgba(124, 58, 237, 0.5);
  }

  .social-link svg {
    width: 20px;
    height: 20px;
    fill: white;
    position: relative;
    z-index: 1;
  }

  .social-link span {
    position: relative;
    z-index: 1;
  }

  .footer-credits {
    color: var(--text-secondary);
    font-size: .8em;
    text-align: center;
    padding: 1em 0;
  }

  @media (max-width: 600px) {
    .social-links {
      flex-direction: column;
      gap: 1em;
      align-items: center;
    }
  }
</style>
