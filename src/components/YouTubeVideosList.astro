---
interface Video {
  id: string;
  title: string;
  publishedAt: string;
  thumbnail: string;
  description?: string;
}

interface Props {
  videos: Video[];
  limit?: number;
}

const { videos, limit = 3 } = Astro.props;
const displayVideos = videos.slice(0, limit);
---

<section class="youtube-section">
  <div class="youtube-header">
    <h2 class="section-title">Listen to Our Stories</h2>
    <p class="youtube-intro">Close your eyes and let our voices carry you into the tale</p>
  </div>

  <div class="videos-grid">
    {displayVideos.map((video) => (
      <a href={`https://www.youtube.com/watch?v=${video.id}`} target="_blank" rel="noopener noreferrer" class="video-card">
        <div class="video-thumbnail">
          <img src={video.thumbnail} alt={video.title} loading="lazy" />
          <div class="play-button">
            <svg viewBox="0 0 24 24" fill="white">
              <path d="M8 5v14l11-7z"/>
            </svg>
          </div>
        </div>
        <div class="video-info">
          <h3 class="video-title">{video.title}</h3>
          <p class="video-date">{new Date(video.publishedAt).toLocaleDateString(undefined, {
            year: 'numeric', month: 'short', day: 'numeric'
          })}</p>
        </div>
      </a>
    ))}
  </div>

  <div class="youtube-cta">
    <a href="https://www.youtube.com/@TheHawrotSiblings" target="_blank" rel="noopener noreferrer" class="cta-link">
      Hear more now â†’
    </a>
  </div>
</section>

<style>
  .youtube-section {
    background: linear-gradient(135deg, rgba(79, 172, 254, 0.15) 0%, rgba(0, 242, 254, 0.15) 100%);
    padding: 4rem 2rem;
    border-radius: 24px;
    margin: 3rem 0;
    position: relative;
    overflow: hidden;
    box-shadow: 0 15px 50px rgba(0, 200, 254, 0.1);
  }

  .youtube-section::before {
    content: 'ðŸŽ¬';
    position: absolute;
    font-size: 5em;
    top: 10px;
    right: 20px;
    opacity: 0.1;
    animation: float-camera 4s ease-in-out infinite;
  }

  @keyframes float-camera {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
  }

  .youtube-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title {
    font-family: 'Fira Code', monospace;
    font-size: 2.8em;
    font-weight: 700;
    margin-bottom: 0;
    text-align: center;
    position: relative;
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    display: inline-block;
    background: linear-gradient(90deg, #10b981 0%, #10b981 10%, #3b82f6 50%, #8b5cf6 90%, #8b5cf6 100%);
    background-size: 200% 100%;
    background-position: 0% 0;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-title.typing {
    width: 0;
    border-right: 2px solid #10b981;
    animation: type-section 2s steps(40, end) forwards, gradient-fade-colorful 7s ease-out forwards;
  }

  @keyframes type-section {
    0% {
      width: 0;
    }
    99% {
      border-right: 2px solid #10b981;
    }
    100% {
      width: 100%;
      border-right: none;
    }
  }

  @keyframes gradient-fade-colorful {
    0% {
      background-position: 0% 0;
    }
    100% {
      background-position: 100% 0;
    }
  }

  .youtube-intro {
    font-size: 1.3em;
    color: #555;
    margin-bottom: 2em;
    font-style: italic;
  }

  .youtube-cta {
    text-align: center;
    margin-top: 3rem;
  }

  .cta-link {
    display: inline-block;
    padding: 1.2rem 3rem;
    background: linear-gradient(135deg, #ff0000 0%, #cc0000 100%);
    color: white;
    text-decoration: none;
    border-radius: 12px;
    font-weight: 700;
    font-size: 1.3rem;
    transition: all 0.3s ease;
    box-shadow: 0 8px 25px rgba(255, 0, 0, 0.3);
    position: relative;
    overflow: hidden;
  }

  .cta-link::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s ease, height 0.6s ease;
  }

  .cta-link:hover::before {
    width: 400px;
    height: 400px;
  }

  .cta-link:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: 0 12px 35px rgba(255, 0, 0, 0.5);
  }

  .videos-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .video-card {
    background: linear-gradient(135deg, #ffffff 0%, #f0f9ff 100%);
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    box-shadow: 0 8px 20px rgba(79, 172, 254, 0.15);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    border: 2px solid rgba(79, 172, 254, 0.1);
  }

  .video-card:hover {
    transform: translateY(-8px) rotate(1deg);
    box-shadow: 0 20px 40px rgba(79, 172, 254, 0.3);
    border-color: rgba(79, 172, 254, 0.4);
  }

  .video-thumbnail {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    overflow: hidden;
    background: #000;
  }

  .video-thumbnail img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }

  .video-card:hover .video-thumbnail img {
    opacity: 0.8;
  }

  .play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60px;
    height: 60px;
    background: rgba(255, 0, 0, 0.9);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .video-card:hover .play-button {
    background: rgba(255, 0, 0, 1);
    transform: translate(-50%, -50%) scale(1.1);
  }

  .play-button svg {
    width: 24px;
    height: 24px;
    margin-left: 3px;
  }

  .video-info {
    padding: 1.2rem;
  }

  .video-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: #333;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .video-date {
    font-size: 0.9rem;
    color: #777;
    margin: 0;
  }

  @media (max-width: 768px) {
    .youtube-section {
      padding: 3rem 1.5rem;
    }

    .section-title {
      font-size: 1.8em;
    }

    .youtube-intro {
      font-size: 1em;
    }

    .videos-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .cta-link {
      font-size: 1.1rem;
      padding: 0.9rem 2rem;
    }
  }
</style>
