---
interface Props {
  name: string;
  bio: string;
  avatar: string;
}
const { name, bio, avatar } = Astro.props;
---

<div>
  <img src={avatar} alt={`Headshot of ${name}`} loading="lazy" />
  <p>
    {bio}
  </p>
</div>

<style>
  div {
    align-items: center;
    display: flex;
    margin-bottom: 1.5rem;
    overflow-wrap: break-word;
    word-wrap: break-word;
    max-width: 100%;
    box-sizing: border-box;
  }

  div:last-child {
    margin-bottom: 0;
  }

  img {
    width: 100px;
    height: 100px;
    border-radius: 100px;
    display: block;
    margin-right: 20px;
    flex-shrink: 0;
  }

  p {
    font-size: 1.125rem;
    overflow-wrap: break-word;
    word-wrap: break-word;
    max-width: 100%;
    min-width: 0;
    flex: 1;
  }
</style>
