---
interface Props {
  name: string;
  bio: string;
  avatar: string;
}
const { name, bio, avatar } = Astro.props;
---

<div>
  <img src={avatar} alt={`Headshot of ${name}`} />
  <p>
    {bio}
  </p>
</div>

<style>
  div {
    align-items: center;
    display: flex;
    margin-bottom: 1.5rem;
  }

  div:last-child {
    margin-bottom: 0;
  }

  img {
    width: 100px;
    height: 100px;
    border-radius: 100px;
    display: block;
    margin-right: 20px;
  }

  p {
    font-size: 1.125rem;
  }
</style>
